#!/bin/sh

# Chown
chown -R admin.users ${SYNOPKG_PKGDEST}

# Link application/desktop redirection
ln -s "${SYNOPKG_PKGDEST}/application" "/usr/syno/synoman/webman/3rdparty/TvShowWatch"

# Backup Crontab because we are nice
cp /etc/crontab /root/crontab_backup

# Install depedency modules
/var/packages/python/target/bin/easy_install tvdb_api transmissionrpc requests

# Create TvShowWatch user group
synogroup --add TvShowWatch admin
synogroup --descset TvShowWatch "The TvShowWatch users"

exit 0

